@model CtoxWebApp.Models.UserLogin;

@{
    Layout = "_Auth";
    ViewData["title"] = "Login";
}

@using (Html.BeginForm("Login", "Auth", FormMethod.Post))
{
    <h1>Sign in to CTOX</h1>
    <div class="editor-label">
        @Html.LabelFor(m => m.Username)
    </div>
    <div class="editor-field">
        @Html.EditorFor(m => m.Username)
    </div>
    <div class="editor-label">
        @Html.LabelFor(m => m.Password)
        <a href="/Auth/Restore">Forgot password?</a>
    </div>
    <div class="editor-field">
        @Html.EditorFor(m => m.Password)
    </div>
    <input type="submit" class="filled" value="Sign in"/>
    <span class="different-page">or <a href="/Auth/Register">Register now</a></span>                                                   
}