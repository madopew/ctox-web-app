<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Ctox - @ViewData["title"]</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/auth.css">
    <link rel="stylesheet" href="~/lib/font-awesome-4.7.0/css/font-awesome.min.css">
</head>
<body>
@if (ViewData["error-message"] != null)
{
    <div class="error-message">
        <span>@ViewData["error-message"]</span>
    </div>
}
else if (ViewData["info-message"] != null)
{
    <div class="info-message">
        <span>@ViewData["info-message"]</span>
    </div>
}
<div class="container">
    <div class="illust">
        <img src='~/@ViewData["image-location"]' alt="Illustration">
    </div>
    <div class="auth-main">
        <a href="/" class="close-button">
            <i class="fa fa-angle-left" aria-hidden="true"></i>
        </a>
        @RenderBody()
    </div>
</div>
</body>
</html>