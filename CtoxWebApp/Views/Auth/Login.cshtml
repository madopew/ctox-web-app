@model CtoxWebApp.Models.UserLogin;

@{
    Layout = "_Auth";
    ViewData["title"] = "Login";
}

@using (Html.BeginForm("Login", "Auth", FormMethod.Post))
{
    <h1>Sign in to CTOX</h1>
    @Html.EditorForModel()
    <input type="submit" class="filled" value="Sign in"/>
    <span class="different-page">or <a href="/Auth/Register">Register now</a></span>                                                   
}